<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_items"
            android:layout_marginBottom="@dimen/standart_margin"
    >

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/photo"
                android:src="@color/black"
                android:layout_margin="@dimen/standart_margin"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_toEndOf="@id/photo"
                android:layout_alignTop="@id/photo"
                android:textColor="@color/black"
                android:text="Иванов Сергей"
                android:textSize="26sp"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+7-987-360-07-84"
                android:layout_below="@id/name"
                android:layout_toEndOf="@id/photo"
        />
    </RelativeLayout>

    <RelativeLayout
            android:background="@color/background_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standart_margin"
            android:layout_marginTop="@dimen/standart_margin"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уведомления"
                android:textSize="@dimen/btn_textSize"
                android:textColor="@color/black"
                android:id="@+id/notification"
                android:layout_margin="@dimen/standart_margin"
        />
        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:enabled="true"
                android:layout_margin="@dimen/standart_margin"
        />
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="@dimen/standart_margin"
            android:background="@color/background_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Должники"
                android:textColor="@color/black"
                android:id="@+id/duty"
                android:layout_marginTop="@dimen/standart_margin"
                android:layout_marginLeft="@dimen/standart_margin"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/duty"
                android:text="9 должников"
                android:layout_marginLeft="@dimen/standart_margin"
                android:layout_marginBottom="@dimen/standart_margin"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4'500 руб"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_textSize"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/standart_margin"
        />
    </RelativeLayout>

    <RelativeLayout
            android:background="@color/background_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Я должен"
                android:textColor="@color/black"
                android:id="@+id/iduty"
                android:layout_marginTop="@dimen/standart_margin"
                android:layout_marginLeft="@dimen/standart_margin"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iduty"
                android:text="9 человек"
                android:layout_marginLeft="@dimen/standart_margin"
                android:layout_marginBottom="@dimen/standart_margin"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4'500 руб"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_textSize"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/standart_margin"
        />
    </RelativeLayout>

    <Button
            android:layout_marginTop="@dimen/standart_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выйти"
            android:background="@color/background_items"
            android:textColor="@color/btn_text_color"
    />
</LinearLayout>